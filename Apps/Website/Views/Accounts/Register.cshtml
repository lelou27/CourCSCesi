@model RegisterViewModel
@{ 
    ViewData["Title"] = "Créer un compte";
}

<h1>@ViewData["Title"]</h1>
<form asp-action="Register" method="post">
    <label asp-for="@Model.Username"></label>
    <input asp-for="@Model.Username" class="form-control" />
    <span asp-validation-for="@Model.Username"></span>

    <label asp-for="@Model.Password"></label>
    <input asp-for="@Model.Password" class="form-control" type="password" />
    <span asp-validation-for="@Model.Password"></span>

    <label asp-for="@Model.ConfirmPassword"></label>
    <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" />
    <span asp-validation-for="@Model.ConfirmPassword"></span>

    <input type="submit" name="submit" value="Envoyer" class="btn btn-outline-dark" />
</form>
